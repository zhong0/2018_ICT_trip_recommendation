<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroudresult"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ActName"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ActivityName"
                android:textAlignment="center"
                android:textColor="#554236"
                android:layout_marginBottom="10dp"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/wordInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="簡介"
                android:textColor="#554236"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ActInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:background="#80FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/wordAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址"
                android:textColor="#554236"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ActAdd"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btMap"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/map" />

            </LinearLayout>

            <TextView
                android:id="@+id/wordTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="電話"
                android:textColor="#554236"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80FFFFFF"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ActTel"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00FFFFFF"
                    app:srcCompat="@drawable/phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btExhib1"
                    android:layout_width="250dp"
                    android:background="#80FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btExhib2"
                    android:layout_width="250dp"
                    android:background="#80FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/btExhib3"
                    android:layout_width="250dp"
                    android:background="#80FFFFFF"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <Button
                android:id="@+id/btStart"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF"
                android:text="@string/wordStart"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>